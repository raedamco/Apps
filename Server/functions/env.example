# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-client-email

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# TWILIO CONFIGURATION (Optional)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=false

# ============================================================================
# MAPBOX CONFIGURATION (Optional)
# ============================================================================
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v3
PORT=5001
HOST=127.0.0.1

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=20
UPLOAD_RATE_LIMIT_MAX=10

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TTL=300000
CACHE_CHECK_PERIOD=60000
CACHE_MAX_KEYS=1000

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=10485760
COMPRESSION_LEVEL=6
TIMEOUT_MS=30000
MAX_CONCURRENT_REQUESTS=100

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
ENABLE_METRICS=true
METRICS_INTERVAL=60000
SLOW_REQUEST_THRESHOLD=1000
VERY_SLOW_REQUEST_THRESHOLD=5000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# ============================================================================
# EXTERNAL SERVICE URLS
# ============================================================================
STRIPE_API_URL=https://api.stripe.com
FIREBASE_API_URL=https://firebase.googleapis.com
MAPBOX_API_URL=https://api.mapbox.com
TWILIO_API_URL=https://api.twilio.com

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5
LOG_COLORIZE=false

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================
TEST_DATABASE_URL=https://test-project.firebaseio.com
TEST_STRIPE_KEY=sk_test_test_key
TEST_NODE_ENV=test
